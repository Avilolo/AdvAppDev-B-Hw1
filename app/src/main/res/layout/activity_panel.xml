<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Activity_PanelBase">

    <LinearLayout
        android:id="@+id/top_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_row"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/top_image_1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:clickable="true"
            android:tag="true"
            android:focusable="true"
            android:padding="8dp"
            android:background="@color/transparent"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/top_image_2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:tag="true"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/transparent"
            android:padding="8dp"
            android:scaleType="centerCrop"
            />

        <ImageButton
            android:id="@+id/top_image_3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:tag="true"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/transparent"
            android:padding="8dp"
            android:scaleType="centerCrop"
            />

        <ImageButton
            android:id="@+id/top_image_4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:tag="true"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/transparent"
            android:padding="8dp"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="150dp">

        <TextView
            android:id="@+id/bottom_text_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background"
            android:padding="8dp"
            android:textSize="25dp"
            android:tag="true"
            android:background="@drawable/text_view_clicked"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/bottom_text_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background"
            android:padding="8dp"
            android:textSize="25dp"
            android:tag="true"
            android:textAlignment="center"
            android:background="@drawable/text_view_clicked"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/bottom_text_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:textSize="25dp"
            android:tag="true"
            android:textAlignment="center"
            android:background="@drawable/text_view_clicked"
            android:padding="8dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/bottom_text_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background"
            android:padding="8dp"
            android:background="@drawable/text_view_clicked"

            android:textAlignment="center"
            android:tag="true"
            android:textSize="25dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

